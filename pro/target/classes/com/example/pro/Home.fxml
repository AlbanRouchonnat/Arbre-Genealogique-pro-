<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="385.0" prefWidth="410.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pro.HomeController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <ImageView fitHeight="200.0" fitWidth="200.0" layoutX="85.0" layoutY="14.0">
            <image>
               <Image url="@../../../pro++logo.png" />
            </image>
         </ImageView>
      </children>
   </AnchorPane>
    <Text style="-fx-font-size: 20px;" text="Bienvenue sur Arbre Généalogique Pro++" />
    <Text style="-fx-font-size: 14px;" text="Veuillez vous connecter ou vous inscrire pour continuer." />

    <HBox alignment="center" spacing="10">
        <Button onAction="#handleSeConnecter" style="-fx-background-color: #000;" text="Se connecter" textFill="WHITE" />
        <Button onAction="#handleSInscrire" style="-fx-background-color: #000;" text="S'inscrire" textFill="WHITE" />
        <Button onAction="#admin" style="-fx-background-color: #000;" text="Admin" textFill="WHITE" />
    </HBox>
</VBox>
