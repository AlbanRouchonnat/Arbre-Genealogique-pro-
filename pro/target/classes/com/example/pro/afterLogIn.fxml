<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pro.AfterLogin">
   <HBox spacing="10">
      <Button onAction="#handleAddChildAction" text="Add Child" />
      <Button onAction="#handleAddParentAction" text="Add Parent" />
      <Button onAction="#handleEditMemberAction" text="Edit Member" />
      <Button onAction="#handleRemoveMemberAction" text="Remove Member" />
      <Button fx:id="goHome" onAction="#goHome" mnemonicParsing="false" text="Revenir a l'accueil" />
   </HBox>
   <AnchorPane fx:id="familyTreePane" prefHeight="600" prefWidth="800" style="-fx-border-color: gray;">
      <!-- Le contenu de l'arbre généalogique sera ajouté ici -->
   </AnchorPane>
</VBox>
